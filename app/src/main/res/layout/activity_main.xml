<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:largeScreens="true"
    tools:context=".MainActivity"
    android:background="@drawable/rectangle_5_9">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="501dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="120dp"
        app:cardBackgroundColor="#CBF8D6D6"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/lemonada_bold"
            android:text="Sending data"
            android:textColor="@color/black"
            android:textFontWeight="@integer/config_navAnimTime"
            android:textSize="30sp" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:layout_marginLeft="90dp"
             android:layout_marginTop="70dp"
             android:text="FirstObject"
             android:textSize="27dp"
             android:fontFamily="@font/lemonada_bold"
             android:textColor="@color/design_default_color_error"
             android:textFontWeight="@integer/config_navAnimTime"/>

        <TextView
            android:id="@+id/nameTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="112dp"
            android:text="FirstName"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/lemonada_bold"/>

        <ImageView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="0dp"
            android:src="@drawable/path_2465">
        </ImageView>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="40dp"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="219dp"
            android:text="SecondObject"
            android:textSize="25dp"
            android:fontFamily="@font/lemonada_bold"
            android:textColor="@color/design_default_color_error"
            android:textFontWeight="@integer/config_navAnimTime"/>
        <TextView

            android:id="@+id/passwordTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6mm"
            android:layout_marginTop="262dp"
            android:text="LastName"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="23sp"
            android:textStyle="bold"
            android:fontFamily="@font/lemonada_bold"/>

        <ImageView
            android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="237dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/path_2465"></ImageView>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="311dp"
            android:gravity="center_horizontal"
            android:layout_marginEnd="45dp"
            android:textSize="22sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_click_me"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="10dp"
            android:width="1in"
            android:background="@drawable/button_states"
            android:bottomLeftRadius="20dp"
            android:bottomRightRadius="20dp"
            android:text=" Send"
            android:textColor="@color/white"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"
            app:backgroundTint="@color/design_default_color_primary_dark"
            />
    </androidx.cardview.widget.CardView>
</RelativeLayout>